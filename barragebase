using UnityEngine;
using System.Collections;

public class barragebase : MonoBehaviour  {

	public int type = -1;
	public int HP= 100;
	public enum level{HIGH,MIDDIUM,LOW,INIT};
	public level lv;
	float yspeed=0,wspeed=0;
	GameObject bullet;

	public IEnumerator wave1(){yield return new WaitForSeconds(1.0f);}
	public IEnumerator wave2(){yield return new WaitForSeconds(1.0f);}
	public IEnumerator wave3(){yield return new WaitForSeconds(1.0f);}
	public IEnumerator ring1(){yield return new WaitForSeconds(1.0f);}
	public IEnumerator ring2(){yield return new WaitForSeconds(1.0f);}
	public IEnumerator ring3(){yield return new WaitForSeconds(1.0f);}
	public IEnumerator aim1(){yield return new WaitForSeconds(1.0f);}
	public IEnumerator aim2(){yield return new WaitForSeconds(1.0f);}
	public IEnumerator aim3(){yield return new WaitForSeconds(1.0f);}


	IEnumerator speedcontrol()
	{


		yield return new WaitForSeconds(1.0f);
	}

	public void Loadall()
	{
		// Load Shooters
	}


	void OnCollisionEnter (Collision col)
	{
		if(col.gameObject.tag.Equals("bullet"))
		{
			HP-=10;
			if(HP<88)
			{
				lv= level.MIDDIUM;
			}
			if(HP<55)
			{
				lv=level.HIGH;
			}
		}
	}
	virtual void move1()
	{
		//StartCoroutine(aim1());
	}
	virtual void move2()
	{
		
	}
	virtual void move3()
	{
	}

	virtual IEnumerator behaviorControl()
	{
		yield return new WaitForSeconds(1.0f);
	}

	void Awake()
	{
		Loadall();
	}


	// Use this for initialization
	void Start () {
		lv = level.INIT;
	}
	
	// Update is called once per frame
	void Update () {
	
	}
}
